<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:background="#f44336"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_restart"
            android:clickable="true"
            android:src="@drawable/selector_restart"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imageView_startPause"
            android:layout_toStartOf="@+id/imageView_startPause"
            android:layout_marginBottom="23dp"
            android:layout_marginRight="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_lap"
            android:clickable="true"
            android:src="@drawable/selector_lap"
            android:visibility="invisible"
            android:layout_alignTop="@+id/imageView_restart"
            android:layout_toRightOf="@+id/imageView_startPause"
            android:layout_toEndOf="@+id/imageView_startPause"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_startPause"
            android:layout_alignTop="@+id/imageView_lap"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/selector_play"
            android:visibility="visible" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="00"
            android:id="@+id/textView_days"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="50sp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/textView5"
            android:layout_toLeftOf="@+id/textView_minutes"
            android:layout_toStartOf="@+id/textView_minutes" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Millis"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView_millis"
            android:layout_alignLeft="@+id/textView_millis"
            android:layout_alignStart="@+id/textView_millis"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/textView_minutes"
            android:layout_alignStart="@+id/textView_minutes"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Seconds"
            android:id="@+id/textView5"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView_seconds"
            android:layout_alignLeft="@+id/textView_seconds"
            android:layout_alignStart="@+id/textView_seconds"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Days"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView_days"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="00"
            android:id="@+id/textView_hours"
            android:textSize="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="00"
            android:id="@+id/textView_minutes"
            android:layout_alignTop="@+id/textView_hours"
            android:layout_toRightOf="@+id/textView_hours"
            android:layout_toEndOf="@+id/textView_hours"
            android:layout_marginLeft="20dp"
            android:textSize="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="000"
            android:id="@+id/textView_millis"
            android:layout_alignTop="@+id/textView_seconds"
            android:layout_toRightOf="@+id/textView_seconds"
            android:layout_toEndOf="@+id/textView_seconds"
            android:layout_marginLeft="20dp"
            android:textSize="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="00"
            android:id="@+id/textView_seconds"
            android:layout_alignTop="@+id/textView_minutes"
            android:layout_toRightOf="@+id/textView_minutes"
            android:layout_toEndOf="@+id/textView_minutes"
            android:layout_marginLeft="20dp"
            android:textSize="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laps"
        android:id="@+id/textView"
        android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mins"
            android:id="@+id/textView8"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secs"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Millis"
            android:id="@+id/textView10"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/listView_recentLaps"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        tools:listitem="@layout/adapter_lap"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp" />

</LinearLayout>
